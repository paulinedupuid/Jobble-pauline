<div class="home content-full">
  <h2>Se connecter</h2>
  <div class="b-margin-20"></div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs content-center">
      <%= f.input :email, label: "Email",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: "Mot de passe",
                required: false,
                input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se rappeler de moi", as: :boolean if devise_mapping.rememberable? %>
      <br>
      <div class= "button-pill-md pill-jaune">
        <%= f.button :submit, "Se connecter" %>
        <%# <% redirect_to dashboard_user_path(@user)%>
      </div>
      <br>
    </div>
  <% end %>
  <%= render "devise/shared/links"%>
</div>
